pipeline {
  agent any
  environment {
    DOCKER_TAG = getDockertag()
  }
  stages {
    stage ('build docker)' {
      steps{
         sh "docker build . -t arshaps/cicd:${DOCKER_TAG}"
      }
    }
    
  }

}

def getDockertag() {
 def tag = sh script: 'git rev-parse HEAD', returnStdout:true
 return tag
}
